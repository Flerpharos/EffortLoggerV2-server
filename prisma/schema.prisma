// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Login {
  id           Int    @id @default(autoincrement())
  username     String @unique
  passwordHash String
  passwordSalt String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("__login__tables__")
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("user")
}

model EffortLog {
  id Int @id @default(autoincrement())

  start DateTime
  end   DateTime

  lifeCycle      Int
  effortCategory Int
  deliverable    Int
  project        Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("effortlog")
}

model DefectLog {
  id Int @id @default(autoincrement())

  name        String
  description String
  fix         String
  status      Boolean @default(false)

  lifeCycleIncluded Int
  lifeCycleExcluded Int?
  defectCategory    Int
  project           Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("defectlog")
}

model Project {
  id          Int    @id @default(autoincrement())
  name        String @unique
  description String @default("")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("project")
}

model LifeCycle {
  id        Int  @id @default(autoincrement())
  projectId Int?

  name        String
  description String @default("")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("lifecycle")
}

model DefectCategory {
  id        Int  @id @default(autoincrement())
  projectId Int?

  name        String
  description String @default("")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("defectcategory")
}

model EffortCategory {
  id        Int  @id @default(autoincrement())
  projectId Int?

  name        String
  description String @default("")

  lifeCycle   Int?
  deliverable Int?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("effortcategory")
}

model Deliverable {
  id        Int  @id @default(autoincrement())
  projectId Int?

  name        String
  description String @default("")

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("deliverable")
}

model UserStory {
  id      Int @id @default(autoincrement())
  project Int

  name        String
  description String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("userstory")
}

model PlanningPoker {
  id      Int    @id @default(autoincrement())
  name    String @unique
  storyId Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("planningpoker")
}

model PlanningPokerRound {
  id      Int @id @default(autoincrement())
  pokerId Int

  round  Int    @default(0)
  note   String
  points Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("planningpokerround")
}

model Notes {
  id        Int    @id @default(autoincrement())
  note      String
  points    Int
  sessionId Int

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("notes")
}
